class Book {
    String title, author;
    double price;

    Book(String title) {
        this(title, "Unknown", 0.0);
    }

    Book(String title, String author) {
        this(title, author, 0.0);
    }

    Book(String title, String author, double price) {
        this.title = title;
        this.author = author;
        this.price = price;
    }

    void display() {
        System.out.println(title + " by " + author + " - â‚¹" + price);
    }
}
