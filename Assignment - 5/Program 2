class Student {
    String name;
    int age;
    String department;

    Student() {
        this("Unknown", 0, "None");
    }

    Student(String name) {
        this(name, 0, "None");
    }

    Student(String name, int age) {
        this(name, age, "None");
    }

    Student(String name, int age, String department) {
        this.name = name;
        this.age = age;
        this.department = department;
    }

    void display() {
        System.out.println(name + " " + age + " " + department);
    }
}
