class Employee {
    int id;
    String name;
    double salary;

    Employee(int id) {
        this(id, "Unknown", 0.0);
    }

    Employee(int id, String name) {
        this(id, name, 0.0);
    }

    Employee(int id, String name, double salary) {
        this.id = id;
        this.name = name;
        this.salary = salary;
    }

    void display() {
        System.out.println(id + " " + name + " â‚¹" + salary);
    }
}
